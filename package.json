{
  "name": "trackmates",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": "18.x.x",
    "npm": "9.x.x"
  },
  "scripts": {
    "postinstall": "npm run build:shared",
    "build:shared": "npm run build -w shared",
    "build:frontend": "npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "lint:editor": "editorconfig-checker",
    "lint:fs": "ls-lint",
    "lint:type": "npm run lint:type --workspaces --if-present",
    "lint:js": "npm run lint:js --workspaces --if-present -- --max-warnings=0",
    "lint:css": "npm run lint:css --workspaces --if-present",
    "lint:prettify": "prettier --check \"**/*.{ts,tsx,json,md,scss,html}\"",
    "lint:trash": "knip",
    "lint": "npm run lint:editor && npm run lint:fs && npm run lint:prettify && npm run lint:type && npm run lint:trash && npm run lint:js && npm run lint:css",
    "prettify": "prettier --write \"**/*.{ts,tsx,json,md,scss,html}\""
  },
  "devDependencies": {
    "@commitlint/cli": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@eslint/js": "8.56.0",
    "@ls-lint/ls-lint": "2.2.2",
    "@typescript-eslint/eslint-plugin": "6.19.1",
    "@typescript-eslint/parser": "6.19.1",
    "editorconfig-checker": "5.1.2",
    "eslint": "8.56.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-perfectionist": "2.5.0",
    "eslint-plugin-sonarjs": "0.23.0",
    "eslint-plugin-unicorn": "50.0.1",
    "globals": "13.24.0",
    "joi": "17.12.0",
    "knip": "4.2.1",
    "lint-staged": "15.2.0",
    "prettier": "3.2.4",
    "simple-git-hooks": "2.9.0",
    "stylelint": "16.2.0",
    "stylelint-config-standard": "36.0.0",
    "stylelint-order": "6.0.4",
    "typescript": "5.3.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint:type && npx lint-staged",
    "commit-msg": "npx commitlint --edit $1"
  }
}
